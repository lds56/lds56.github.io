CREATE TABLE STUDENTS(
   SID CHAR(10) NOT NULL,
   NAME VARCHAR(20) NOT NULL,
   EMAIL VARCHAR(30),
   PHONE CHAR(11),
   NATION VARCHAR(10),
   COLLEGE VARCHAR(30),
   DEPARTMENT VARCHAR(30),
   GRADE INT,
   CLASS INT,
   PRIMARY KEY (ID)
);

CREATE TABLE TEACHERS(
   TID CHAR(10) NOT NULL,
   NAME VARCHAR(20) NOT NULL,
   EMAIL VARCHAR(30),
   PHONE CHAR(11),
   NATION VARCHAR(10),
   COLLEGE VARCHAR(30),
   DEPARTMENT VARCHAR(30),
   POSITION VARCHAR(10),
   INFO VARCHAR(100),
   PRIMARY KEY (ID)
);

CREATE TABLE COURSES(
   CID CHAR(10) NOT NULL,
   NAME VARCHAR(20) NOT NULL,
   COLLEGE VARCHAR(30),
   DEPARTMENT VARCHAR(30),
   INFO VARCHAR(100),
   PRIMARY KEY (ID)
);

CREATE TABLE STAKEC(
	CID CHAR(10) NOT NULL,
	SID CHAR(10) NOT NULL,
	PRIMARY KEY (CID, SID)
);

CREATE TABLE TTEACHC(
	CID CHAR(10) NOT NULL,
	TID CHAR(10) NOT NULL,
	PRIMARY KEY (CID, TID)
);

CREATE TABLE TAPPLYC(
	CID CHAR(10) NOT NULL,
	TID CHAR(10) NOT NULL,
	REASON VARCHAR(100),
	PRIMARY KEY (CID, TID)
);
